class Solution {
    int ts(int n) {
        return (n * (n + 1)) >> 1;
    }

    public int totalMoney(int days) {
        int nWeeks = days / 7;
        int rDays = days % 7;
        int total = ts(days);
        if (days <= 7) return total;

        return total - 42 * ts(nWeeks - 1) - 6 * nWeeks * rDays;
    }
}
