class Solution {
    public boolean canPlaceFlowers(int[] arr, int n) {
        int n1=arr.length;
        boolean f=false;
        if(n==0){
            return true;
        }
        for(int i=0;i<n1;i++){
            if((arr[i]==0) && ((i==0)||(arr[i-1]==0 ))&&((i==n1-1)||(arr[i+1]==0) )){
                arr[i]=1;
                n--;
                if(n==0){
                    f=true;
                }
            }
        }return f;

        
    }
}
